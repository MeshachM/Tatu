<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/decidebutton"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".MainOnlineActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="10pt"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/oplayername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:textColor="@color/colorPlayer1"
            android:inputType="textPersonName"
            android:text="Other Player Name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="5pt"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/requestbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="RequestEvent"
            android:text="Request" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="5pt"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/acceptbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="AcceptEvent"
            android:text="Accept" />
    </LinearLayout>

    <TableLayout
    android:layout_width="match_parent"
        android:layout_marginTop="20pt"
    android:layout_height="match_parent">

    <TableRow
        android:layout_marginBottom="3pt"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent" >


        <Button
            android:id="@+id/bu1"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_marginRight="3pt"
            android:background="@drawable/custom_button"
            android:onClick="buclick" />

        <Button
            android:id="@+id/bu2"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_marginRight="3pt"
            android:background="@drawable/custom_button"
            android:onClick="buclick" />

        <Button
            android:id="@+id/bu3"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:background="@drawable/custom_button"
            android:onClick="buclick" />
    </TableRow>

        <TableRow
            android:layout_marginBottom="3pt"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/bu4"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:background="@drawable/custom_button"
                android:layout_marginRight="3pt"
                android:onClick="buclick" />

            <Button
                android:id="@+id/bu5"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginRight="3pt"
                android:background="@drawable/custom_button"
                android:onClick="buclick" />

            <Button
                android:id="@+id/bu6"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:background="@drawable/custom_button"
                android:onClick="buclick" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="3pt"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/bu7"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:background="@drawable/custom_button"
                android:layout_marginRight="3pt"
                android:onClick="buclick" />

            <Button
                android:id="@+id/bu8"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:background="@drawable/custom_button"
                android:layout_marginRight="3pt"
                android:onClick="buclick" />

            <Button
                android:id="@+id/bu9"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:background="@drawable/custom_button"
                android:onClick="buclick" />

        </TableRow>

    <TableRow
        android:layout_marginTop="20pt"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/replaybtn"
            android:text="Replay"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:background="@drawable/costumbtn"
            android:layout_height="wrap_content"
            />
    </TableRow>

        <ImageView
            android:id="@+id/imageView"
            android:layout_marginLeft="160pt"
            android:layout_marginTop="60dp"
            android:layout_width="201dp"
            android:layout_height="59dp"
            android:gravity="right"
            app:srcCompat="@drawable/logout" />
</TableLayout>
</LinearLayout>




