<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/decidebutton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/startwallpaper"
    tools:context=".StartScreenActivity">

    <TableRow
        android:layout_marginTop="100pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3pt"
        android:gravity="center">

        <Button
            android:id="@+id/playbtn1"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="237dp"
            android:layout_height="30pt"
            android:background="@drawable/custom_startlogo"
            android:text="Play" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3pt"
        android:gravity="center">

        <Button
            android:id="@+id/playbtn2"
            android:layout_width="237dp"
            android:layout_height="30pt"
            android:background="@drawable/custom_startlogo"
            android:text="Play With A Friend" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3pt"
        android:gravity="center">

        <Button
            android:id="@+id/playbtn3"
            android:layout_width="237dp"
            android:layout_height="30pt"
            android:background="@drawable/custom_startlogo"
            android:text="Play With An Online Friend" />
    </TableRow>


</TableLayout>




